<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/role_background_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/setting_main_icon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/setting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="设置"
            android:layout_toRightOf="@+id/setting_main_icon"
            android:textColor="#333333"
            android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/setting_arrow"
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/main_scroll_right" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/setting_hint_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:layout_toLeftOf="@id/setting_arrow" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/setting_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/setting_hint_icon"
            android:textColor="#999999"
            android:layout_marginRight="10dp"
            android:maxEms="6"
            android:gravity="end"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp" />

</RelativeLayout>