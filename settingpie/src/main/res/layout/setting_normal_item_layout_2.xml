<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/role_background_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/setting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="设置"
        android:textColor="#333333"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/setting_arrow"
        android:layout_width="8dp"
        android:layout_height="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/default_arrow_right" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/setting_hint_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/setting_arrow" />

    <TextView
        android:id="@+id/setting_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/setting_hint_icon"
        android:textColor="#999999"
        android:layout_marginRight="10dp"
        android:maxEms="6"
        android:gravity="end"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp" />

</RelativeLayout>